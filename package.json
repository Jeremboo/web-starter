{
  "name": "web-starter",
  "version": "1.0.0",
  "description": "My organization for web developpement only with npm scripts.",
  "main": "app/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jeremboo/web-starter/tree/npm"
  },
  "scripts": {
    "start": "npm run css:dev & npm run js:dev",
    "js:dev": "budo app/main.js --live --dir ./public --open -- -t [babelify --presets [ es2015 ] ]",
    "css:dev": "stylus -w app/main.styl -u autoprefixer-stylus -o public/style.css",
    "build": "npm run css:build & npm run js:build",
    "js:build": "browserify -t [babelify --presets [ es2015 ] ] app/main.js -o public/main.js && uglifyjs public/main.js -c -o public/main.js",
    "css:build": "stylus -w app/main.styl -u autoprefixer-stylus -c -o public/style.css"
  },
  "keywords": [
    "starter",
    "kit",
    "babel",
    "html5",
    "npm"
  ],
  "author": "Jérémie Boulay <jeremi.boulay@gmail.com>",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "autoprefixer-stylus": "^0.9.2",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.2.1",
    "eslint": "^2.5.3",
    "eslint-config-airbnb": "^6.2.0",
    "poststylus": "^0.2.3",
    "stylus": "^0.54.2"
  }
}

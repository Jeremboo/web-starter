{
  "name": "npm-budo",
  "version": "1.0.0",
  "description": "My organization for web developpement only with npm scripts.",
  "main": "app/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jeremboo/web-starter/tree/npm"
  },
  "scripts": {
    "start": "npm run css:dev & npm run js:dev",
    "js:dev": "budo app/main.js --live --dir ./public --open -- -t babelify",
    "css:dev": "stylus -w app/main.styl -u autoprefixer-stylus -o public/style.css",
    "build": "npm run css:build & npm run js:build",
    "js:build": "browserify -t babelify app/main.js -o public/main.js && uglifyjs public/main.js -c -o public/main.js",
    "css:build": "stylus -w app/main.styl -u autoprefixer-stylus -c -o public/style.css"
  },
  "keywords": [
    "starter",
    "kit",
    "babel",
    "html5",
    "npm"
  ],
  "author": "Jérémie Boulay <jeremi.boulay@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "uglify-js": "^3.0.27"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "autoprefixer-stylus": "^0.14.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^14.4.0",
    "budo": "^10.0.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "poststylus": "^0.2.3",
    "stylus": "^0.54.2"
  }
}
